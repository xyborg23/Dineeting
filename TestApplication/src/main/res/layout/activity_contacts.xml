<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_key"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Add Friends"
        android:onClick="submitInfo"
        android:id="@+id/button" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="bottom">

        <ProgressBar
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="0"
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressbar_Horizontal"
            android:max="5"/>

        <TextView
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignLeft="@id/progressbar_Horizontal"
            android:layout_alignTop="@id/progressbar_Horizontal"
            android:layout_alignRight="@id/progress_horizontal"
            android:layout_alignBottom="@id/progress_horizontal"
            android:text="4/5"/>

    </RelativeLayout>


</LinearLayout>